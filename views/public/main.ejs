                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img ng-src="{{pathAmazonResources+'msd-logo.png'}}"></a>
            </div>

            <div class="collapse navbar-collapse" collapse="navCollapsed">

                <ul class="nav navbar-nav">
                    <li ng-class="{'active': $state.includes('home')}"><a ui-sref="home" href="#/"> Home </a></li>
                    <li ng-class="{'active': $state.includes('stiri')}"><a ui-sref="stiri.all" href="#/stiri"> Stiri </a></li>
                    <li ng-class="{'active': $state.includes('articole')}"><a ui-sref="articole.all" href="#/articole"> Articole </a></li>
