<!doctype html>
<html style="height: 100%;">
<head>
    <title>Resetare parola</title>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        .btn-primary{
            background-color: #009d97;
            border-color: #009d97;
        }
        .btn-primary:hover,.btn-primary:focus,.btn-primary:active{
            background-color:#006a66;
            border-color: #006a66;
        }
        .noPadding{
            padding: 0px;
        }
    </style>
</head>
<body style="height: 100%;">
<div style="height: 100%;">
    <div style="position: relative; top: 40%; transform: translateY(-50%); padding: 0 50px;">
        <div style="max-width: 800px; margin: 0 auto">
            <div style="text-align: left">
            <img style="width: 180px; margin-left: -18px" src="http://www.healthsummit.ie/site/uploads/msdbewellgreengray.jpg"/>
        </div>
            <div>
            <h3 style="margin-top: 10px;"><i class="glyphicon glyphicon-lock" style="font-size: 20px"></i>&nbsp;Password reset</h3>
        </div>
            <div style="text-align: left">
            <% if (typeof message !== 'undefined') { %>
            <div class="alert alert-<%= message.type %>"><%= message.message %></div>
            <% } %>
        </div>

    <div style="width: 100%">

            <form method="post" style="padding-top: 5px; border-top: 1px solid #eee">
                <div class="form-group">
                    <label for="password">Parola: </label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="form-group">
                    <label for="confirm">Confirma parola: </label>
                    <input type="password" class="form-control" id="confirm" name="confirm">
                </div>
                          <div style="width:100%;text-align: left">
                    <button type="submit" class="btn btn-primary">Resetare parola</button>
                            </div>

            </form>
    </div>
        </div>
</div>
</body>
</html>