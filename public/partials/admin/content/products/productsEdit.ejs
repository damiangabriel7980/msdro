<div class="modal-header">
    <div class="modal-title"><h3>Editeaza produs</h3></div>
</div>
<div class="col-md-12 modal-body padding30">
    <tabset>
        <tab heading="Informatii">
            <div class="col-md-12 noPadding marginTop20">
                <label>Nume produs:</label>
                <input ng-model="product.name" type="text" class="form-control">
            </div>
            <div class="col-md-12 noPadding">
                <therapeutic-select all-areas="areas" selected-areas="selectedAreas" returned-areas="returnedAreas"></therapeutic-select>
            </div>
            <div class="col-md-12 noPadding">
                <div class="form-group col-md-12 noPadding">
                    <label>Grupuri:</label>
                    <my-multiple-select all-objects="groups" selected-objects="selectedGroups" track-by="_id"
                                        display-by="display_name" split-by="profession.display_name" output="notUsed"></my-multiple-select>
                </div>
            </div>
            <div class="col-md-12 noPadding">
                <label>Descriere:</label>
                <textarea ui-tinymce="tinymceOptions" ng-model="product.description"></textarea>
            </div>
        </tab>
        <tab heading="Multimedia">
            <div class="col-xs-12 noPadding marginTop20">
                <div class="col-md-6 text-left noPadding">
                    <div class="col-md-12 noPadding">
                        <a class="btn btn-default" href="{{pathAmazonDev+product.image_path}}" target="_self"><i class="glyphicon glyphicon-camera"></i>&nbsp;Descarca imagine</a>
                    </div>
                    <div class="col-md-12 noPadding">
                        <a class="btn btn-default" href="{{pathAmazonDev+product.file_path}}" target="_self"><i class="glyphicon glyphicon-camera"></i>&nbsp;Descarca RPC</a>
                    </div>
                </div>
                <div class="col-md-6 noPadding text-right">
                    <div class="col-md-12 noPadding">
                        <button class="btn btn-default" type="file" ngf-select ngf-change="fileSelected($files, $event)" ngf-multiple="false" ngf-accept="'image/*'"><i class="glyphicon glyphicon-camera"></i>&nbsp;Incarca imagine</button>
                    </div>
                    <div class="col-md-12">
                        <alert ng-if="uploadAlert.newAlert" type="{{uploadAlert.type}}" close="uploadAlert.newAlert=false">{{uploadAlert.message}}</alert>
                    </div>
                    <div class="col-md-12 noPadding">
                        <button class="btn btn-default" type="file" ngf-select ngf-change="fileSelectedRPC($files, $event)" ngf-multiple="false" ngf-accept="'.doc,.docx,.pdf'"><i class="glyphicon glyphicon-camera"></i>&nbsp;Incarca RPC</button>
                    </div>
                    <div class="col-md-12">
                        <alert ng-if="uploadAlertRPC.newAlert" type="{{uploadAlertRPC.type}}" close="uploadAlertRPC.newAlert=false">{{uploadAlertRPC.message}}</alert>
                    </div>
                </div>
            </div>
        </tab>
    </tabset>

</div>
<div class="modal-footer">
    <div class="col-md-12">
        <a class="btn pull-left btn-primary" ng-click="closeModal()">Inchide</a>
        <a class="btn pull-right btn-danger" ng-click="updateProduct()">Modifica</a>
    </div>
</div>