<div class="modal-header">
    <div class="modal-title"><h3>Adauga articol</h3></div>
</div>
<div class="modal-body" style="height: 70%;">
    <div class="row">
        <div class="col-xs-6">
            <label>Nume articol:</label>
            <input ng-model="articolNou.title" type="text" class="form-control col-xs-12">
        </div>
        <div class="col-xs-6">
            <label>Nume autor:</label>

            <input ng-model="articolNou.author" type="text" class="form-control col-xs-12">
        </div>
        <div class="col-md-12">
            <label>Tip document:</label>
            <select ng-model="articolNou.type" class="form-control">
                <option value="1">National</option>
                <option value="2">International</option>
                <option value="3">Stiintifice</option>
            </select>
            </div>
        <div class="col-md-12">
            <div class="form-group">
                <label for="grupuri">Grupuri:</label>
                <my-multiple-select all-objects="groups" selected-objects="selectedGroups" track-by="_id" display-by="display_name"
                                    split-by="profession.display_name" output="notUsed"></my-multiple-select>
            </div>
        </div>
        <div class="col-md-12">
            <label>Text:</label>
            <textarea ui-tinymce="tinymceOptions" ng-model="articolNou.text"></textarea>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn pull-left btn-primary" ng-click="closeModal()">Close</a>
    <a class="btn pull-right btn-primary" ng-click="createArticle()">Adauga articol</a>
</div>