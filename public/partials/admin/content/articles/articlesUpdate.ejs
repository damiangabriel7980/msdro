<div class="modal-header">
    <div class="modal-title"><h3>Actualizeaza articol</h3></div>
</div>
<div class="modal-body col-xs-12 padding30" style="height: 70%;">
    <tabset>
        <tab heading="Informatii">
            <div class="col-xs-12 noPadding marginTop20">
                <div class="col-xs-6 noPaddingLeft">
                    <label>Nume articol:</label>
                    <input ng-model="article.title" type="text" class="form-control col-xs-12">
                </div>
                <div class="col-xs-6 noPaddingRight">
                    <label>Nume autor:</label>

                    <input ng-model="article.author" type="text" class="form-control col-xs-12">
                </div>
                <div class="col-md-12 noPaddingLeft">
                    <label>Divizie:</label><br>
                    <select title="activationCode" ng-model="article.activationCode" class="select-code">
                        <option disabled selected value> Selectati o divizie </option>
                        <option ng-repeat="item in activationCodes" ng-value="item.code">{{item.name}}</option>
                    </select>
                </div>
                <div class="col-md-12 noPadding">
                    <label>Tip document:</label>
                    <select ng-model="article.type" class="form-control">
                        <option value="1">National</option>
                        <option value="2">International</option>
                        <option value="3">Stiintifice</option>
                    </select>
                </div>
                <div class="col-md-12 noPadding">
                    <div class="form-group">
                        <label for="grupuri">Grupuri:</label>
                        <my-multiple-select all-objects="groups" selected-objects="myGroups.selectedGroups" track-by="_id" display-by="display_name"
                                            split-by="profession.display_name" output="notUsed"></my-multiple-select>
                    </div>
                </div>
                <div class="col-md-12 noPadding">
                    <div class="form-group">
                        <label for="grupuri">Patologii:</label>
                        <my-multiple-select all-objects="pathologies" selected-objects="myPathologies.selectedPathologies" track-by="_id" display-by="display_name"
                                            output="notUsed"></my-multiple-select>
                    </div>
                </div>
            </div>
        </tab>
        <tab heading="Multimedia">
            <div class="col-md-12 noPadding marginTop20">
                <div class="col-md-12 noPadding">
                    <button class="btn btn-default" type="file" ngf-select ngf-change="fileSelected($files, $event)" ngf-multiple="false" ngf-accept="'image/*'"><i class="glyphicon glyphicon-camera"></i>&nbsp;Incarca thumbnail</button>
                </div>
                <div class="col-md-12 marginTop20 noPadding">
                    <img no-cache-src="{{imagePath}}" ng-if="article.image_path" style="width:100px;">
                </div>
                <div class="col-xs-12 noPadding" ng-if="article.image_path">
                    <label>Link thumbnail:</label>
                    <ul>
                        <li style="font-size: 12px" class="col-xs-12">
                            {{pathAmazonDev+article.image_path}}&nbsp;
                        </li>
                    </ul>
                </div>
                <div class="col-md-12 noPadding">
                    <alert ng-if="uploadAlert.newAlert" type="{{uploadAlert.type}}" close="uploadAlert.newAlert=false">{{uploadAlert.message}}</alert>
                </div>
            </div>
            <div class="col-md-12 noPadding marginTop20">
                <button class="btn btn-default" type="file" ngf-select ngf-change="fileAssociatedSelected($files, $event)" ngf-multiple="false" ngf-accept="'image/*,video/*'"><i class="glyphicon glyphicon-camera"></i>&nbsp;Incarca multimedia</button>
            </div>
            <div class="col-md-12 noPadding">
                <alert ng-if="uploadAlertImages.newAlert" type="{{uploadAlertImages.type}}" close="uploadAlertImages.newAlert=false">{{uploadAlertImages.message}}</alert>
            </div>
            <div class="col-xs-12 noPadding" ng-if="article.associated_images">
                <label>Multimedia asociat:</label>
                <ul>
                    <li ng-repeat="images in article.associated_images" style="font-size: 12px" class="col-xs-12">
                        {{pathAmazonDev+images}}&nbsp;<i class="glyphicon glyphicon-remove pointer" ng-click="removeImage(images)"></i>
                    </li>
                </ul>
            </div>
            <angular-bootstrap-tabs tabs="editableTabs" editor-options="tinymceOptions"></angular-bootstrap-tabs>

        </tab>
    </tabset>
</div>
<div class="modal-footer">
    <div class="col-xs-12">
        <a class="btn pull-left btn-primary" ng-click="closeModal()">Inchide</a>
        <a class="btn pull-right btn-primary" ng-click="updateArticle()">Actualizeaza articol</a>
    </div>
</div>