<div class="container-fluid">
    <div class="col-xs-12">
        <h3>Update speaker</h3>
    </div>
    <div class="col-xs-12">
        <label class="label label-default">Prenume:</label>
        <input ng-model="newSpeaker.first_name" type="text" class="form-control col-xs-12">
    </div>
    <div class="col-xs-12">
        <label class="label label-default">Nume:</label>
        <input ng-model="newSpeaker.last_name" type="text" class="form-control col-xs-12">
    </div>
    <div class="col-xs-12">
        <label class="label label-default">Profesie:</label>
        <input ng-model="newSpeaker.profession" type="text" class="form-control col-xs-12">
    </div>
    <div class="col-xs-12">
        <label class="label label-default">Loc de munca:</label>
        <input ng-model="newSpeaker.workplace" type="text" class="form-control col-xs-12">
    </div>
    <div class="col-xs-12">
        <form method="post">
            <label class="label label-default">Descriere:</label>
            <textarea ui-tinymce ng-model="tinymceModel"></textarea>
        </form>
    </div>
    <div class="col-md-6" style="padding: 0;">
        <div class="col-md-12">
            <img no-cache-src="{{pathAmazonDev+newSpeaker.image_path}}" ng-if="newSpeaker.image_path" style="width:100px;">
        </div>
        <div class="col-md-12">
            <button class="btn btn-default" type="file" ng-file-select ng-file-change="fileSelected($files, $event)" multiple="false" accept="image/*"><i class="glyphicon glyphicon-camera"></i>&nbsp;Incarca fisier</button>
        </div>
        <div class="col-md-12">
            <alert ng-if="uploadAlert.newAlert" type="{{uploadAlert.type}}" close="uploadAlert.newAlert=false">{{uploadAlert.message}}</alert>
        </div>
    </div>
    <div class="col-xs-12">
        <a class="btn pull-left btn-primary" ng-click="okk()">Back to Events</a>
        <a class="btn pull-right btn-primary" ng-click="updateSpeaker()">Update Speaker</a>
    </div>
    <div growl class="col-xs-12">

    </div>
</div>