<div class="container-fluid">
    <div class="col-xs-12">
        <h3>Update room</h3>
    </div>
    <div class="col-xs-12">
        <label class="label label-default">Room name:</label>
        <input ng-model="newRoom.room_name" type="text" class="form-control col-xs-12">
    </div>
    <div class="col-xs-12">
        <label class="label label-default">QR Code Message:</label>
        <input ng-model="newRoom.qr_code.message" type="text" class="form-control col-xs-12">
    </div>
    <div class="col-xs-12">
        <qr text='roomQr' size="300" image="true"></qr>
    </div>
    <div class="form-group col-md-12" style="margin-bottom: 0;">
        <label for="notificationCheck">Trimite notificare&nbsp;</label>
        <input type="checkbox" id="notificationCheck" ng-model="notificationCheck">
    </div>
    <div class="form-group col-md-12">
        <label for="notificationText">Text notificare</label>
        <input type="text" ng-model="notificationText" class="form-control">
    </div>
    <div class="col-xs-12">
        <a class="btn pull-left btn-primary" ng-click="okk()">Back to Events</a>
        <a class="btn pull-right btn-primary" ng-click="updateRoom()">Update Room</a>
    </div>
    <div growl class="col-xs-12">

    </div>
</div>


