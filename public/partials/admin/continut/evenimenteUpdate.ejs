<div class="container-fluid">
    <div class="col-xs-12">
        <h3>Update eveniment</h3>
    </div>
    <div class="col-xs-6">
        <label class="label label-default">Denumire:</label>
        <input ng-model="newEvent.name" type="text" class="form-control col-xs-12">
    </div>
    <div class="col-xs-4">
        <label class="label label-default">Tip:</label>

        <select ng-model="newEvent.type" class="form-control">
            <option value="1" >Eveniment</option>
            <option value="2">Transmisie Live</option>
        </select>
    </div>
    <div class="col-xs-2">
        <input ng-model="newEvent.privacy" type="checkbox">Privat
    </div>
    <div class="col-xs-6">
        <div class="dropdown">
            <a class="dropdown-toggle my-toggle-select" role="button" data-toggle="dropdown" data-target="#" href="">
                <div class="input-group col-xs-12">
                    <label>Inceput:</label>
                    <input type="text" class="form-control" data-ng-model="newEvent.start">
                </div>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                <datetimepicker data-ng-model="newEvent.start"
                                data-datetimepicker-config="{ dropdownSelector: '.my-toggle-select' }"></datetimepicker>
            </ul>
        </div>
    </div>
    <div class="col-xs-6">
        <div class="dropdown">
            <a class="dropdown-toggle my-toggle-select" role="button" data-toggle="dropdown" data-target="#" href="">
                <div class="input-group col-xs-12">
                    <label>Sfarsit:</label>
                    <input type="text" class="form-control" data-ng-model="newEvent.end">
                </div>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                <datetimepicker data-ng-model="newEvent.end"
                                data-datetimepicker-config="{ dropdownSelector: '.my-toggle-select' }"></datetimepicker>
            </ul>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <label for="grupuri">Grupuri:</label>
            <select ng-model="selectedGroup" ng-options="grup as grup.display_name for grup in grupuri"
                    class="form-control" id="grupuri" style="width: 100%;" ng-change="groupWasSelected(selectedGroup)">
            </select>
        </div>
    </div>
    <div class="col-md-12">
        <div ng-repeat="grup in grupeUser">
            <div class="label label-primary" style="float: left; margin-right: 10px; margin-bottom: 10px;">
                {{grup.display_name}}&nbsp;
                <i class="glyphicon glyphicon-remove-sign" ng-click="removeUserGroup(grup._id)" style="cursor: pointer;"></i>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <label class="label label-default">Locatie:</label>
        <input ng-model="newEvent.place" type="text" class="form-control col-xs-12">

    </div>
    <div class="col-md-12">
        <div class="form-group">
            <label for="conferencesSelect">Conferinte:</label>
            <select ng-model="selectedConference" ng-options="conf as conf.title for conf in conferences"
                    class="form-control" id="conferencesSelect" style="width: 100%;" ng-change="ConfWasSelected(selectedConference)">
            </select>
        </div>
    </div>
    <div class="col-md-12">
        <div ng-repeat="conf in ConfEvents">
            <div class="label label-primary" style="float: left; margin-right: 10px; margin-bottom: 10px;">
                {{conf.title}}&nbsp;
                <i class="glyphicon glyphicon-remove-sign" ng-click="removeConf(conf._id)" style="cursor: pointer;"></i>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <form method="post">
            <label class="label label-default">Detalii:</label>
            <textarea ui-tinymce="tinymceOptions" ng-model="newEvent.description"></textarea>
        </form>
    </div>
    <div class="form-group col-md-12" style="margin-bottom: 0;">
        <label for="notificationCheck">Trimite notificare&nbsp;</label>
        <input type="checkbox" id="notificationCheck" ng-model="notificationCheck">
    </div>
    <div class="form-group col-md-12">
        <label for="notificationText">Text notificare</label>
        <input type="text" ng-model="notificationText" class="form-control">
    </div>
    <div growl class="col-xs-12">

    </div>
    <div class="col-xs-12">
        <a class="btn pull-left btn-primary" ng-click="okk()">Back to Events</a>
        <a class="btn pull-right btn-primary" ng-click="updateEvent()">Update event</a>
    </div>
</div>


