<div class="modal-header">
    <div class="modal-title"><h3>Actualizeaza articol</h3></div>
</div>
<div class="modal-body" style="height: 70%;">
    <div class="row">
        <div class="col-xs-6">
            <label>Nume articol:</label>
            <input ng-model="article.title" type="text" class="form-control col-xs-12">
        </div>
        <div class="col-xs-6">
            <label>Nume autor:</label>

            <input ng-model="article.author" type="text" class="form-control col-xs-12">
        </div>
        <div class="col-md-12 marginTop5px">
            <button class="btn btn-default" type="file" ng-file-select ng-file-change="fileAssociatedSelected($files, $event)" multiple="false" accept="image/*,video/*"><i class="glyphicon glyphicon-camera"></i>&nbsp;Incarca multimedia</button>
        </div>
        <div class="col-md-12">
            <alert ng-if="uploadAlertImages.newAlert" type="{{uploadAlertImages.type}}" close="uploadAlertImages.newAlert=false">{{uploadAlertImages.message}}</alert>
        </div>
        <div class="col-xs-12" ng-if="article.associated_images">
            <label>Multimedia asociat:</label>
            <ul>
                <li ng-repeat="images in article.associated_images" style="font-size: 12px" class="col-xs-12">
                    {{pathAmazonDev+images}}&nbsp;<i class="glyphicon glyphicon-remove pointer" ng-click="removeImage(images)"></i>
                </li>
            </ul>



        </div>
        <div class="col-md-12">
            <label>Tip document:</label>
            <select ng-model="article.type" class="form-control">
                <option value="1">Noutati</option>
                <option value="2">Legislativ</option>
                <option value="3">Stiintifice</option>
            </select>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label for="grupuri">Grupuri:</label>
                <my-multiple-select all-objects="groups" selected-objects="selectedGroups" track-by="_id" display-by="display_name" split-by="profession.display_name"></my-multiple-select>
            </div>
        </div>
        <div class="col-md-12" style="padding: 0;">
            <div class="col-md-12">
                <img no-cache-src="{{imagePath}}" ng-if="article.image_path" style="width:100px;">
            </div>
            <div class="col-md-12">
                <button class="btn btn-default" type="file" ng-file-select ng-file-change="fileSelected($files, $event)" multiple="false" accept="image/*"><i class="glyphicon glyphicon-camera"></i>&nbsp;Incarca fisier</button>
            </div>
            <div class="col-md-12">
                <alert ng-if="uploadAlert.newAlert" type="{{uploadAlert.type}}" close="uploadAlert.newAlert=false">{{uploadAlert.message}}</alert>
            </div>
        </div>
        <div class="col-md-12">
            <label>Text:</label>
            <textarea ui-tinymce="tinymceOptions" ng-model="article.text"></textarea>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn pull-left btn-primary" ng-click="closeModal()">Inchide</a>
    <a class="btn pull-right btn-primary" ng-click="updateArticle()">Actualizeaza articol</a>
</div>