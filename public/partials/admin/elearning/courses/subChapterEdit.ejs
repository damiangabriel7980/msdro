<div class="col-md-12 noPadding">
    <div class="col-md-12">
        <h3>Editare sub-capitol</h3>
    </div>
    <div class="col-md-12 noPadding">
        <div class="col-md-12 form-group">
            <label>Titlu sub-capitol:</label>
            <input ng-model="subChapter.title" type="text" class="form-control">
        </div>
    </div>
    <div class="col-md-6">
        <label class="label label-default">Durata:</label>
        <input type="number" ng-model="subChapter.duration" class="form-control col-xs-12">
    </div>
    <div class="col-md-6">
        <label class="label label-default">Numar ordine:</label>

        <input type="number" class="form-control col-xs-12" disabled ng-model="subChapter.order">
    </div>
    <div class="col-md-12">
        <label>Descriere:</label>
        <div id="mgrid" ng-bind-html="trustAsHtml(subChapter.description)">
        </div>
    </div>
    <div class="col-md-12" style="margin: 10px 0">
        <a class="btn pull-right btn-primary" ng-click="updateSubChapter()">Salveaza modificarile</a>
    </div>
</div>