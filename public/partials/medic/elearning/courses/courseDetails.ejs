<div class="chaptersContainer">
    <!-- chapter -->
    <div ng-if="course.listChapters.length == 1 && course.listChapters[0].listSubchapters.length == 1" ng-repeat="slide in course.listChapters[0].listSubchapters[0].listSlides"
         class="entry clearfix"
         ng-class="{'entry-current':slide.isNextUp}"
         ng-click="goToSlide(slide._id)"
         id="{{slide._id}}">
        <div class="item-text col-xs-12 clearfix">
            <div class="item-text-container col-xs-10">
                <div class="item-text-text">{{slide.title}}</div>
            </div>
        </div>
    </div>
    <div ng-if="course.listChapters.length > 1 || course.listChapters[0].listSubchapters.length > 1" ng-repeat="chapter in course.listChapters" >
        <div class="chapter">
            <div class="chapter-title">
                <div class="text-placeholder">{{ ($index+1) +'. ' + chapter.title}} </div>
            </div>
            <div class="chapter-subtext">
                {{chapter.description}}
            </div>
            <div class="chapter-sub-text"></div>
        </div>
        <!-- sub-chapter -->
        <div class="sub-chapters-container" ng-repeat="subChapter in chapter.listSubchapters">
            <div class="separator">
                {{subChapter.title}}
            </div>
            <!-- slide -->
            <div ng-repeat="slide in subChapter.listSlides"
                 class="entry clearfix"
                 ng-class="{'entry-current':slide.isNextUp}"
                 ng-click="goToSlide(slide._id)"
                 id="{{slide._id}}">
                <div class="item-text col-xs-12 clearfix">
                    <div class="item-text-container col-xs-10">
                        <div class="item-text-text">{{slide.title}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
