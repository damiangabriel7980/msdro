<div class="col-md-12 multimediaView">
    <div class="col-md-12 message" ng-if="multimedias[0].message"><h2>{{multimedias[0].message}}</h2></div>
    <div ng-if="multimedias.length>=1 && !multimedias[0].message">
        <div class="col-xs-12 multimediaWrapper" ng-repeat="prod in multimedias | orderBy:'title'">
            <div class="col-xs-12 well multimedia">
                <div class="col-md-2 image">
                    <img class="img-thumbnail" alt="{{prod.title}}"
                         ng-src="{{prod.thumbnail_path?pathAmazonDev+prod.thumbnail_path:(prod.type==1?defaultVideoImage:defaultSlideImage)}}"/>
                </div>
                <div class="col-md-10 col-xs-8 col-sm-8 content">
                    <div class="col-md-12 title">
                        <h4><a class="handCursor" ng-click="openMultimedia(prod._id)">{{prod.title}}</a></h4>
                    </div>
                    <div class="col-md-12 noPadding" convert-special conver="prod.description" ng-bind-html="trimText(htmlToPlainText(prod.description), 190)"></div>
                </div>
                <div class="col-md-12 showMore">
                    <a class="btn btn-info btn-sm btn-transparent pull-right" ng-click="openMultimedia(prod._id)">Vezi material</a>
                </div>
            </div>
        </div>
    </div>
</div>