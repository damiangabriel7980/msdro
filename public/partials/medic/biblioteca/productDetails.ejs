<div class="col-md-11 col-xs-12 well well-content">
    <div class="row">

        <div class="col-md-12 col-xs-12">
            <div class="col-md-12 col-xs-12">
                <h3 class="MSDgreen"><b>{{selectedProduct.name}}</b></h3>
            </div>
            <div class="col-md-3 col-xs-12">
                <a class="thumbnail"><img src="{{selectedProduct.image_path!=null || selectedProduct.image_path!=undefined?amazon + selectedProduct.image_path:defaultProductImage}}" alt="{{selectedProduct.name}}" height="300" width="300"/></a>
                <a ng-href="{{amazon + selectedProduct.file_path}}" target="_blank" class="btn btn-info btn-more-news btn-block margintop10px"><i class="icon-share icon-white"></i>&nbsp;Descarca RCP</a>
                <hr class="margintop10px marginbottom0">
            </div>
            <div class="col-md-9 col-xs-12" convert-special conver="selectedProduct.description" ng-bind-html="trustAsHtml(selectedProduct.description)">
            </div>
            <div class="visible-xs col-xs-12 text-center">
                <button class="btn btn-sm btn-info btn-more-news" ui-sref="biblioteca.produse.productsByArea({id:selectedArea._id})">Inapoi la produse</button>
            </div>
        </div>
    </div>
</div>