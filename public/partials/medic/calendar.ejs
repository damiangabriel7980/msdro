<!doctype html>
<head>
    <script src="components/fullcalendar/fullcalendar.js"></script>
    <script src="components/fullcalendar/gcal.js"></script>

    <link rel='stylesheet' href='components/fullcalendar/fullcalendar.css' />

</head>
<body>
<div class="col-md-12 col-xs-12 calendarWrapper">
    <div id="calendar" calendar="myCalendar" ui-calendar="uiConfigMobile.calendar" ng-model="realEventsMob" class="visible-xs visible-sm col-xs-12 noPadding"></div>
    <div class="visible-xs visible-sm col-xs-12 nextEvents">
        <h3 class="MainTitle">EVENIMENTE URMATOARE</h3>
        <div class="col-md-12" ng-if="!eventsFiltered">
            <h3>Nu exista nici un eveniment pentru grupul dvs.!</h3>
        </div>
        <div ng-repeat="eventim in eventsFiltered">
            <div class="col-md-12 col-xs-12 col-sm-12 noPadding" ng-class="$index==0?'paddingTop5':''">
                <div class="col-md-2 col-xs-2 col-sm-1 noPadding Date">
                    <h2 class="day">{{eventim.start | filter: asDate | date:'dd'}}</h2>
                    <h5 class="month">{{eventim.start | filter: asDate | date:'MMM'}}</h5>
                </div>

                <div class="noPadding col-md-9 col-sm-9 col-xs-9 Title">

                    <h4 ng-if="eventim.type==1" ng-click="goToEvent(eventim._id)" convert-special conver="eventim.name" ng-bind-html="trustAsHtml(eventim.name)">

                    </h4>
                    <h4 ng-if="eventim.type==2" ng-click="goToEvent(eventim._id)" convert-special conver="eventim.name" ng-bind-html="trustAsHtml(eventIcon+eventim.name)">

                    </h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 hidden-xs hidden-sm nextEvents">
            <h3 class="MainTitle">EVENIMENTE URMATOARE</h3>
            <div class="col-md-12" ng-if="!eventsFiltered">
                <h3>Nu exista nici un eveniment pentru grupul dvs.!</h3>
            </div>
             <div ng-repeat="eventim in eventsFiltered">
                    <div class="col-md-12 col-xs-12 noPadding" ng-class="$index==0?'paddingTop5':''">
                        <div ng-cloak class="col-md-2 col-xs-2 noPadding Date">
                            <h2 class="day">{{eventim.start | filter: asDate | date:'dd'}}</h2>
                            <h5 class="month">{{eventim.start | filter: asDate | date:'MMM'}}</h5>
                          </div>

                        <div class="noPadding col-md-9 col-xs-9 Title">

                            <h4 ng-if="eventim.type==1" ng-click="goToEvent(eventim._id)" convert-special conver="eventim.name" ng-bind-html="trustAsHtml(eventim.name)">

                            </h4>
                            <h4 ng-if="eventim.type==2" ng-click="goToEvent(eventim._id)" convert-special conver="eventim.name" ng-bind-html="trustAsHtml(eventIcon+eventim.name)">

                            </h4>
                        </div>
                    </div>
                </div>
         </div>
<div id="calendar" calendar="myCalendar" ui-calendar="uiConfig.calendar" ng-model="realEvents" class="col-md-8 hidden-xs hidden-sm"></div>
        </div>
<ng-view></ng-view>
</body>