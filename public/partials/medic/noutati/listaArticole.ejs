<div class="row noArticles text-center" ng-if="message"><h4>{{message}}</h4></div>
<div class="col-xs-12 col-sm-12 articlesMobileMessage hidden-md hidden-lg" ><h3 class="noMarginTop">{{title}}</h3></div>
<div class="articlesListWrapper" ng-repeat="cont in content | limitTo: lmt">
    <horizontal-content-list content="cont" image-path-attr="image_path" image-path-prefix="{{pathAmazonDev}}" default-image-path="{{defaultArticleImage}}"
                             title-attr="title" text-attr="text" bold-attr-1="author" date-attr="last_updated"
                             button-label="{{cont.type != 3?'Vezi stire':'Vezi articol'}}" navigate="navigateToContent"></horizontal-content-list>
</div>
<div class="articlesMoreNews" align="center">
    <button class="btn btn-default" style="margin-top: 20px" ng-class="{'hide': content.length <= lmt}" ng-click="increaseLimit()">Mai multe stiri</button>
</div>