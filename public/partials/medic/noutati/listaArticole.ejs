<div class="row noPadding" style="text-align: center" ng-if="message!=''"><h4>{{message}}</h4></div>
<div class="col-xs-12 col-sm-12 noPadding padd10Bottom hidden-md hidden-lg" style="text-align: left"><h3 class="noMarginTop">{{title}}</h3></div>
<div class="well noBox noPadding" ng-repeat="cont in content | limitTo: lmt">
    <div ng-class="{'row articleBox zeroMarginLeft':deviceWidth >= 700, 'col-xs-12 noPadding padd25Bottom':deviceWidth < 700}">
        <img ng-class="{'img-thumbnail width20 pull-left img-back':deviceWidth >= 700, 'my-img-thumbnail col-xs-4 col-sm-2 pull-left img-responsive noPadding':deviceWidth < 700}" class="" ng-src="{{cont.image_path?pathAmazonDev+cont.image_path:defaultArticleImage}}"/>

        <div ng-class="{'col-md-9 col-xs-12 width80 noPaddingLeft':deviceWidth >= 700, 'col-md-9 col-xs-8 col-sm-10 noPadding textHome':deviceWidth < 700}">
            <div class="col-md-12 title MSDgreenDarker handCursor" ui-sref="{{sr}}" convert-special conver="cont.title" ng-bind-html="trustAsHtml(cont.title)"></div>
            <div class="col-md-12 trimmedArticle" convert-special conver="cont.text" ng-bind-html="trimText(htmlToPlainText(cont.text), 250)"></div>

                <div class="col-md-12 author ">
                    <div class="col-md-8 noPadding">
                        <div class="col-md-12 noPadding" convert-special conver="cont.author" ng-bind-html="trustAsHtml(cont.author)">
                        </div>
                        <div class="col-md-12 noPadding">
                            {{cont.last_updated | date: 'dd/MM/yyyy'}}
                        </div>
                    </div>
                    <div class="col-md-4 hidden-xs hidden-sm">
                        <a class="btn btn-sm btn-info margintop5percent pull-right btn-more-news margintop5px" ui-sref="{{sr}}">{{cont.type<3?'Vezi stire':'Vezi articol'}}</a>
                    </div>
                </div>

        </div>
    </div>
</div>
<div style="clear: both;margin:0 auto;" align="center">
    <button class="btn btn-sm btn-info btn-more-news" ng-class="showMore" ng-click="increaseLimit()">Mai multe stiri</button>
</div>