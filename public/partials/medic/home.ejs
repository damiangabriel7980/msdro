                <a ng-click="showFarmaModal()">Farmacovigilenta</a>
                <a ng-click="showTermsModal()">Termeni si conditii</a>
            </div>

            <div id="notMsieDiv" class="col-md-6 text-right">

                <a ui-sref="contact">Contact </a>
                <a ng-click="showFarmaModal()">Farmacovigilenta</a>
                <a ng-click="showTermsModal()">Termeni si conditii</a>
            </div>
    </div>