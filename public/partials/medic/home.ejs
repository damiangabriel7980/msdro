<div class="container-fluid container-fluid-carousel">
<carousel disable-ng-animate interval="myInterval" set-ng-animate="true">
    <slide ng-repeat="carouselItem in HomeCarousel track by $index" active="slide.active">
        <div class="wrapping-div">
        <a ui-sref="noutati.articol({articleId:HomeCarousel[($index-1)<0?HomeCarousel.length-1:$index-1].articleID})"><img class="img-carousel-prev" ng-src="{{pathAmazonDev+HomeCarousel[($index-1)<0?HomeCarousel.length-1:$index-1].image_path}}" style="border-right:10px solid white;"></a>
            <a ui-sref="noutati.articol({articleId:HomeCarousel[$index].articleID})"><img class="img-carousel-center" ng-src="{{pathAmazonDev+HomeCarousel[$index].image_path}}" style="margin-right:10px;"></a>
            <a ui-sref="noutati.articol({articleId:HomeCarousel[($index+1)==HomeCarousel.length?0:$index+1].articleID})"> <img class="img-carousel-next" ng-src="{{pathAmazonDev+HomeCarousel[($index+1)==HomeCarousel.length?0:$index+1].image_path}}" style="border-right:10px solid white;"></a>
        </div>
        <div class="my-carousel-caption carousel-caption col-sm-4">
            <h1 class="titluCarousel">{{carouselItem.title}}</h1>
        </div>
        <div class="carousel-caption col-sm-4 pull-right hidden-sm mySearch">
            <div style="margin-left: 45%">
            <ul class="nav navbar-nav navbar-left">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle profileClass" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-user"></span>
                    </a>
                    <ul class="dropdown-menu profile-drop" role="menu">
                        <li ng-repeat="group in specialGroups">
                            <a style="cursor: pointer;" ng-click="selectSpecialGroup(group)">{{group.display_name}}</a>
                        </li>
                        <li class="divider"></li>
                        <li><a style="cursor: pointer;" ng-click="showProfile()">Profile</a></li>
                        <li><a href="logout">Sign Out</a></li>
                    </ul>
                </li>
            </ul>
                </div>
            <form class="navbar-form" role="search">
                <div class="input-group">
                    <input type="text" class="form-control my-form-control" placeholder="search" name="q">
                    <div class="input-group-btn">
                        <button class="btn btn-default my-form-control" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </form>
            </div>
    </slide>
</carousel>
</div>
<div class="container-fluid homeStyles">
    <div ng-class="{'col-sm-5':events.length!=0, 'col-sm-4':events.length==0}">
        <div class="col-sm-12">
            <div class="col-sm-12 noPadding">
                <h4>ULTIMELE NOUTATI</h4>
            </div>
            <div class="col-sm-4 well noPadding readMore newsClass" ng-repeat="n in news | limitTo: 3">
                <div class="col-sm-9 noPadding">
                    <a ui-sref="noutati.articol({articleType:n.type, articleId:n._id})">
                        <img class="my-img-thumbnail img-responsive" ng-src="{{n.image_path?imagePre+n.image_path:defaultArticleImage}}" style="width: 100%;">
                    </a>
                </div>
                <div class="col-sm-9 noPadding">
                    <div class="col-sm-12 title noPadding"><a class="textBlue" ui-sref="noutati.articol({articleType:n.type, articleId:n._id})"><b>{{n.title | limitTo : 30}}...</b></a></div>
                    <div class="col-sm-12 header justified noPadding">{{createHeader(n.text,80)}}<br/>
                    </div>
                </div>
                <div class="readMoreEye"> <a  ui-sref="noutati.articol({articleType:n.type, articleId:n._id})" class="readMore" ><i class="glyphicon glyphicon-eye-open grey-eye"></i></a></div>
            </div>
        </div>
        <hr align="center" width="75%"/>
        <div class="col-sm-12" >
            <div class="col-sm-12 noPadding">
                <h4>ULTIMELE NOUTATI STIINTIFICE</h4>
            </div>
            <div class="col-sm-4 noPadding well readMore newsClass" ng-repeat="n in scientificNews | limitTo: 3">
                <div class="col-sm-9 noPadding">
                    <a ui-sref="noutati.articol({articleType:n.type, articleId:n._id})">
                        <img class="my-img-thumbnail img-responsive" ng-src="{{n.image_path?imagePre+n.image_path:defaultArticleImage}}" style="width: 100%;">
                    </a>
                </div>
                <div class="col-sm-9 noPadding">
                    <div class="col-sm-12 title noPadding"><a class="textBlue" ui-sref="noutati.articol({articleType:n.type, articleId:n._id})"><b>{{n.title | limitTo : 30}}...</b></a></div>
                    <div class="col-sm-12 header justified noPadding">{{createHeader(n.text,80)}}<br/></div>
                </div>
                <div class="readMoreEye"><a  ui-sref="noutati.articol({articleType:n.type, articleId:n._id})"><i class="glyphicon glyphicon-eye-open grey-eye"></i></a></div>
            </div>
        </div>
    </div>

    <div ng-class="{'col-sm-4':events.length!=0, 'col-sm-5':events.length==0}" class="smallScreen rightBorder leftBorder">
        <div class="col-sm-12 noPadd">
            <div class="col-sm-12 noPadding">
                <h4>E-LEARNING</h4>
            </div>
            <div class="col-sm-12 noPadding well" ng-repeat="m in multimedia | limitTo: 3">
                <div class="col-sm-12 noPadding marginELearn margintop20px">
                    <div class="col-sm-12" ui-sref="elearning.multimedia.multimediaById({idd:m._id})">

                        <div class="textBlue"><i class="glyphicon" ng-class="{'glyphicon-picture':m.type==2,'glyphicon-film':m.type==1}"></i><b>&nbsp;{{m.title+"("+m.author+")"}}</b></div>
                        <div class="paddingLeft">{{m.description}}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12"><hr/></div>
        <div class="col-sm-12 noPadd">
            <div class="col-sm-12 noPadding">
                <h4>EVENIMENTE URMATOARE:</h4>
            </div>
            <div class="col-sm-12 noPadding well" ng-repeat="e in events | limitTo: 3">
                <div class="col-sm-2 noPadding">
                    <div class="day customFloatLeft textBlue"><b><span class="dayFont">{{toDate(e.start).getDate()}}</span><br/><span class="monthFont">{{monthsArray[toDate(e.start).getMonth()]}}</span></b></div>
                    <div class="calendar-style"></div>
                </div>
                <div class="col-sm-10 noPadding col-Left">
                    <div class="col-sm-12 title textBlue" ui-sref="calendar.calendarDetails({id:e._id})"><b>{{e.name}}</b></div>
                    <div class="col-sm-12 header margintop5px ">{{e.description.length>20?createHeader(e.description,20):e.description}}</div>
                </div>
            </div>
        </div>

    </div>
        <div ng-if="events.length > multimedia.length" class="col-sm-3 noPadding MerckSmall well" ng-include="merckBoxUrl"></div>
    <div ng-if="events.length <= multimedia.length || events.length==0" class="col-sm-3 well" ng-include="merckBoxUrl"></div>
</div>
<div id="footer" class="margintop30px" style="height: 35px;">
            <div class="col-sm-6">
                <a href="http://www.msd.ro/">
                    <img src="https://s3-eu-west-1.amazonaws.com/msdapp/resources/msd_white.png" class="pull-left img-responsive" style="height:28px;margin-right:10px;">
                </a>

            </div>
    <div id="notMsieDiv" class="col-sm-6 text-right">

                <a ui-sref="contact" class="link-footer">Contact </a>
                <a ng-click="showFarmaModal()" class="link-footer">Farmacovigilenta</a>
                <a ng-click="showTermsModal()" class="link-footer">Termeni si conditii</a>
            </div>
    </div>