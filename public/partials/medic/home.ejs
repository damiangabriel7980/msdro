<div class="carousel-container hidden-xs hidden-sm" ng-if="HomeCarousel.length!=0">
    <ul rn-carousel rn-carousel-index='$parent.selectedIndexCarousel' class="main-carousel" rn-carousel-auto-slide="{{myInterval}}" carousel-resizable>
        <li ng-repeat="carouselItem in HomeCarousel track by $index" class="carouselMargins">
            <div class="carouselSlide">
                <div class="carousel-title">
                    <h3 class="titleFont" ng-click="carouselNavigate(carouselItem)" convert-special conver="carouselItem.title" ng-bind-html="trustAsHtml(trimWords(htmlToPlainText(carouselItem.title), 3))"></h3>
                </div>
                <div class="imageWrapper firstTrimmedImage" ng-if="$index===0">
                    <img ondragstart="return false;" ng-src="{{pathAmazonDev+firstIllusion.image_path}}"/>
                </div>
                <div class="imageWrapper">
                    <img ondragstart="return false;" ng-src="{{pathAmazonDev+carouselItem.image_path}}"/>
                </div>
                <div class="imageWrapper lastTrimmedImage" ng-if="$index===HomeCarousel.length-1">
                    <img ondragstart="return false;" ng-src="{{pathAmazonDev+lastIllusion.image_path}}"/>
                </div>
            </div>
        </li>
    </ul>
    <div class="carousel-controll">
        <div class="carousel-controll-element"
             ng-repeat="image in HomeCarousel track by $index"
             ng-class="{'selected':$index == selectedIndexCarousel}"
             ng-click="setSlideCarousel($index)">
        </div>
    </div>
</div>

<div class="col-xs-12 container homeStyles" >
    <div class="col-md-6 col-sm-12 col-xs-12 leftColumn">
        <div class="col-xs-11 lastNewsWrapper">
            <div class="col-xs-12 Title">
                <h3>ULTIMELE NOUTATI</h3>
            </div>
            <div class="col-xs-4 Article" ng-repeat="n in news | limitTo: 3">
                <div class="col-xs-10 homeNewsArticleImage">
                    <a ui-sref="noutati.articol({articleType:n.type, articleId:n._id})">
                        <img class="img-responsive" height="155" ng-src="{{n.image_path?pathAmazonDev+n.image_path:defaultArticleImage}}">
                    </a>
                </div>
                <div class="col-xs-10 TextWrapper">
                    <div class="col-xs-10 title Description"><a ui-sref="noutati.articol({articleType:n.type, articleId:n._id, fromHome: 1})"><b convert-special conver="n.title" ng-bind-html="trustAsHtml(n.title)"></b></a></div>
                    <div class="col-xs-10 header Description" convert-special conver="n.text" ng-bind-html="convertAndTrustAsHtml(n.text)"></div>

                </div>
                <div class="col-xs-10 buttonWrapper hidden-sm hidden-xs">
                    <a class="btn btn-news btn-info btn-sm" ui-sref="noutati.articol({articleType:n.type, articleId:n._id, fromHome: 1})"> Citeste mai mult </a>
                </div>
            </div>
        </div>
        <div class="col-xs-10"><hr></div>
        <div class="col-xs-11 lastNewsWrapper">
            <div class="col-xs-12 Title">
                <h3>ULTIMELE NOUTATI STIINTIFICE</h3>
            </div>
            <div class="col-xs-4 Article" ng-repeat="n in scientificNews | limitTo: 3">
                <div class="col-xs-10 homeNewsArticleImage">
                    <a ui-sref="noutati.articol({articleType:n.type, articleId:n._id})">
                        <img class="homeNews-img-thumbnail img-responsive" ng-src="{{n.image_path?pathAmazonDev+n.image_path:defaultArticleImage}}">
                    </a>
                </div>
                <div class="col-xs-10 TextWrapper">
                    <div class="col-xs-10 title Description"><a class="homeNewsDarkTitle" ui-sref="noutati.articol({articleType:n.type, articleId:n._id, fromHome: 1})"><b convert-special conver="n.title" ng-bind-html="convertAndTrustAsHtml(n.title)"></b></a></div>
                    <div class="col-xs-10 header Description" convert-special conver="n.text" ng-bind-html="convertAndTrustAsHtml(n.text)"></div>
                </div>
                <div class="col-xs-10 buttonWrapper hidden-xs hidden-sm">
                    <a class="btn btn-news btn-info btn-sm" ui-sref="noutati.articol({articleType:n.type, articleId:n._id, fromHome: 1})"> Citeste mai mult</a>
                    </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-xs-12 col-sm-12 midColumn">
        <div class="col-xs-12 Multimedia">
            <div class="col-xs-12 Title">
                <h3>MULTIMEDIA</h3>
            </div>
            <div class="col-xs-12 Wrapper" ng-repeat="m in multimedia | limitTo: 3">
                <div class="col-xs-1 col-sm-2 col-md-1 iconWrapper">
                    <i class="glyphicon" ng-class="{'glyphicon-picture':m.type==2,'glyphicon-film':m.type==1}"></i>&nbsp;
                </div>
                <div class="col-xs-11 col-sm-10 col-md-11 Content">
                    <a class="hidden-xs mediaTitle" ui-sref="elearning.multimedia.multimediaByArea({idArea:0,idMulti: m._id})"><b convert-special conver="m.title" ng-bind-html="trustAsHtml(m.title)"></b><b>&nbsp;(</b><b convert-special conver="m.author" ng-bind-html="trustAsHtml(m.author)"></b><b>)</b></a>
                    <a class="hidden-sm hidden-lg mediaTitle" ui-sref="elearning.multimedia.multimediaMobile({id: m._id})"><b convert-special conver="m.title" ng-bind-html="trustAsHtml(m.title)"></b><b>&nbsp;(</b><b convert-special conver="m.author" ng-bind-html="trustAsHtml(m.author)"></b><b>)</b></a>
                    <p ng-if="m.description != null" convert-special conver="m.description" ng-bind-html="convertAndTrustAsHtml(m.description)"></p>
                </div>
            </div>
        </div>
        <div class="col-xs-12"><hr/></div>
        <div class="col-xs-12 Events">
            <div class="col-xs-12 Title">
                <h3>EVENIMENTE URMATOARE</h3>
            </div>
            <div class="col-xs-12 eventDisplay" ng-repeat="e in events | limitTo: 3">
                <div class="col-xs-1 col-sm-2 col-md-1 date">
                    <div class="col-xs-12 day">{{toDate(e.start).getDate()}}</div>
                    <div class="col-xs-12 month">{{monthsArray[toDate(e.start).getMonth()]}}</div>
                </div>
                <div class="col-xs-10 col-sm-10 col-md-10 Content">
                    <div class="col-xs-12 title MediaTitle" ng-if="e.type==2" ui-sref="calendar({id:e._id})"><b convert-special conver="e.name" ng-bind-html="trustAsHtml(iconLive + e.name)"></b></div>
                    <div class="col-xs-12 title MediaTitle" ng-if="e.type==1 || e.type==null" ui-sref="calendar({id:e._id})"><b convert-special conver="e.name" ng-bind-html="trustAsHtml(e.name)"></b></div>
                    <div class="col-xs-12 header Description" ng-if="e.description!='undefined'" convert-special conver="e.description" ng-bind-html="trimText(htmlToPlainText(e.description), 50)"></div>
                    <div class="col-xs-12 header Description" ng-if="e.description=='undefined'" convert-special conver="e.description">&nbsp;</div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 MobileWidgets hidden-md hidden-lg" ng-if="specialWidgetUrl" ng-include="specialWidgetUrl"></div>
        <div class="col-xs-12 MobileWidgets hidden-md hidden-lg" ng-include="merckBoxUrl"></div>
    </div>
    <div class="hidden-sm col-md-2 hidden-xs rightColumn">
        <div class="col-xs-12 homeWidgetsColumnNoPadding" ng-if="specialWidgetUrl" ng-include="specialWidgetUrl"></div>
        <div class="col-xs-12 homeWidgetsColumnNoPadding" ng-include="merckBoxUrl"></div>
    </div>
</div>