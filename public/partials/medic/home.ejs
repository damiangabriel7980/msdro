<carousel interval="myInterval">
    <slide ng-repeat="carouselItem in HomeCarousel track by $index" active="slide.active">
        <div class="wrapping-div">
        <a ui-sref="noutati.articol({articleId:HomeCarousel[($index-1)<0?HomeCarousel.length-1:$index-1].articleID})"><img class="img-carousel" ng-src="{{pathAmazonDev+HomeCarousel[($index-1)<0?HomeCarousel.length-1:$index-1].image_path}}" style="margin-right:10px;"></a>
            <a ui-sref="noutati.articol({articleId:HomeCarousel[$index].articleID})"><img class="img-carousel" ng-src="{{pathAmazonDev+HomeCarousel[$index].image_path}}" style="margin-right:10px;"></a>
            <a ui-sref="noutati.articol({articleId:HomeCarousel[($index+1)==HomeCarousel.length?0:$index+1].articleID})"> <img class="img-carousel" ng-src="{{pathAmazonDev+HomeCarousel[($index+1)==HomeCarousel.length?0:$index+1].image_path}}" style="margin-right:10px;"></a>
        </div>
        <div class="my-carousel-caption carousel-caption">
            <h1>{{carouselItem.title}}</h1>
        </div>
    </slide>
</carousel>
<div class="container-fluid homeStyles">
    <div ng-class="{'col-md-6':events.length!=0, 'col-md-5':events.length==0}">
        <div class="col-md-12">
            <div class="col-md-12">
                <h4>ULTIMELE NOUTATI</h4>
            </div>
            <div class="col-md-4 noPadding readMore" style="float:left;height: 350px" ng-repeat="n in news | limitTo: 3">
                <div class="col-md-9 noPadding">
                    <a ui-sref="noutati.articol({articleType:n.type, articleId:n._id})">
                        <img class="my-img-thumbnail" ng-src="{{n.image_path?imagePre+n.image_path:defaultArticleImage}}" style="width: 100%;">
                    </a>
                </div>
                <div class="col-md-9 noPadding">
                    <div class="col-md-12 title"><a ui-sref="noutati.articol({articleType:n.type, articleId:n._id})">{{n.title | limitTo : 30}}...</a></div>
                    <div class="col-md-12 header justified">{{createHeader(n.text,80)}}<br/>
                    </div>
                </div>
                <div class="readMoreEye"> <a  ui-sref="noutati.articol({articleType:n.type, articleId:n._id})" class="readMore" ><i class="glyphicon glyphicon-eye-open"></i></a></div>
            </div>
        </div>
        <hr align="center" width="50%"/>
        <div class="col-md-12" >
            <div class="col-md-12">
                <h4>ULTIMELE NOUTATI STIINTIFICE</h4>
            </div>
            <div class="col-md-4 noPadding readMore" style="float:left; height: 350px" ng-repeat="n in scientificNews | limitTo: 3">
                <div class="col-md-9 noPadding">
                    <a ui-sref="noutati.articol({articleType:n.type, articleId:n._id})">
                        <img class="my-img-thumbnail" ng-src="{{n.image_path?imagePre+n.image_path:defaultArticleImage}}" style="width: 100%;">
                    </a>
                </div>
                <div class="col-md-9 noPadding">
                    <div class="col-md-12 title"><a ui-sref="noutati.articol({articleType:n.type, articleId:n._id})">{{n.title | limitTo : 30}}...</a></div>
                    <div class="col-md-12 header justified">{{createHeader(n.text,80)}}<br/></div>
                </div>
                <div class="readMoreEye"><a  ui-sref="noutati.articol({articleType:n.type, articleId:n._id})"><i class="glyphicon glyphicon-eye-open"></i></a></div>
            </div>
        </div>
    </div>
    <hr style="-webkit-transform:rotate(90deg);-webkit-transform-origin-x: 1%;" />

    <div ng-class="{'col-md-3':events.length!=0, 'col-md-4':events.length==0}">
        <div class="col-md-12">
            <div class="col-md-12">
                <h4>E-LEARNING</h4>
            </div>
            <div class="col-md-12 noPadding" ng-repeat="m in multimedia | limitTo: 3">
                <div class="col-md-12 noPadding">
                    <div class="col-md-12"><hr/></div>
                    <div class="col-md-12 title" ui-sref="elearning.multimedia.multimediaById({idd:m._id})">
                        <i class="glyphicon" ng-class="{'glyphicon-picture':m.type==2,'glyphicon-film':m.type==1}"></i>
                        &nbsp;{{m.title+"("+m.author+")"}}</div>
                    <div ng-if="m.description" class="col-md-12 description">{{m.description}}</div>
                </div>
            </div>
        </div>
        <div class="col-md-12"><hr/></div>
        <div class="col-md-12">
            <div class="col-md-12">
                <h4>EVENIMENTE URMATOARE:</h4>
            </div>
            <div class="col-md-12" ng-repeat="e in events | limitTo: 3">
                <div class="col-md-12 noPadding"><hr/></div>
                <div class="col-md-1 noPadding">
                    <div class="day">{{toDate(e.start).getDate()}}</div><div class="month">{{monthsArray[toDate(e.start).getMonth()]}}</div>
                </div>
                <div class="col-md-8 noPadding">
                    <div class="col-md-12 title" ui-sref="calendar.calendarDetails({id:e._id})">{{e.name}}</div>
                    <div class="col-md-12 header">{{e.description.length>50?createHeader(e.description,50):e.description}}</div>
                </div>
            </div>
        </div>

    </div>
<hr style="-webkit-transform:rotate(90deg);-webkit-transform-origin-x: 1%;" />
        <div ng-if="events.length > multimedia.length" class="col-md-3 noPadding" ng-include="merckBoxUrl"></div>
    <div ng-if="events.length <= multimedia.length || events.length==0" class="col-md-3" ng-include="merckBoxUrl"></div>
</div>
