<div class="col-xs-10">
    <ul class="thumbnails products" style="list-style: none">

        <li class="col-xs-3" ng-repeat="prod in products | orderBy:'name'|limitTo: lmt">
            <div class="thumbnail">
                <img src="{{amazon + prod.image_path}}" alt="{{prod.name}}" height="150px" width="150px"/>
                <h4><a href="#"></a>{{prod.name}}</h4>

                <p>{{prod.description | htmlToPlaintext | limitTo: 190}}...
                <button class="button btn-info pull-right" ui-sref="biblioteca.produse.prodById({id:prod._id})">Detalii produs</button>
                </p>
            </div>
            <br />
        </li>

    </ul>
</div>
<div class="col-xs-2">
    <ul class="nav nav-list">
        <li class="active" ng-click="reset()">A - Z</li>
        <li class="divider"></li>

        <li ng-repeat="letter in firstLetters | mySort" ng-click="filterResults($index)">
            {{letter}}
        </li>

    </ul>
</div>
<div style="clear: both;margin:0 auto;" align="center">
    <button class="button btn-info" ng-click="increaseLimit()">Mai multe produse</button>
</div>