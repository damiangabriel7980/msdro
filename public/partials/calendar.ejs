<body>
<div class="container" id="content">
    <div class="row-margintop20px">
        <div class="col-xs-3 hidden-xs">
            <h4 style="border-bottom: 1px solid #d97c1e;">Evenimentele urmatoare:</h4>
             <div class="event blue" ng-repeat="event in events2Filtered">
                    <div class="row">
                        <div class="col-xs-4 date">
                            <h2>{{event.start | asDate | date:'dd'}}</h2>
                            <h5>{{event.start | asDate | date:'MMM'}}</h5>
                          </div>

                        <div class="col-xs-8">
                            <h4 ui-sref="calendar.calendarDetails({id:event.uuid})">{{event.name}}</h4>
                            <p>{{event.description | htmlToPlaintext |limitTo: 50}}...</p>
                        </div>
                    </div>
                </div>
         </div>
<div calendar="myCalendar" ui-calendar="uiConfig.calendar" ng-model="realEvents" class="well col-xs-8 well-content col-xs-offset-1"></div>
        </div>
</div>
<ng-view></ng-view>
</body>